      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-md-6">
      <%= form.label :full_name %>
      <%= form.text_field :full_name, class:"form-control", placeholder:"JoÃ£o" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :rg %>
