<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Clientes</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Nome Completo</th>
        <th>Data de Nascimento</th>
        <th>Profissão/</th>
        <th>Início da Locação</th>
        <th>Valor da Locação</th>
        <th>Número do Apartamento</th>
        <th>Iptu</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.id %></td>
          <td><%= client.full_name %></td>
          <td><%= client.birth_date %></td>
          <td><%= client.job %></td>
          <td><%= client.location_init %></td>
          <td><%= client.location_value %></td>
          <td><%= client.apto_number %></td>
          <td><%= client.iptu %></td>
          <td style="width: 145px">
          <%= link_to client, class:"btn btn-info" do %>
            <i class="fas fa-eye"></i>
          <% end %>
          <%= link_to edit_client_path(client), class:"btn btn-primary btn-circle" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to client, class:"btn btn-danger btn-circle", method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div>

<br>

  <%= link_to 'New Client', new_client_path %>

