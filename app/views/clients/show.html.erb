<p id="notice"><%= notice %></p>

<p>
  <strong>Nome Completo:</strong>
  <%= @client.full_name %>
</p>

<p>
  <strong>RG:</strong>
  <%= @client.rg %>
</p>

<p>
  <strong>CPF:</strong>
  <%= @client.cpf %>
</p>

<p>
  <strong>Data de Nascimento:</strong>
  <%= data_br(@client.birth_date) %>
</p>

<p>
  <strong>Profissão:</strong>
  <%= @client.job %>
</p>

<p>
  <strong>Início da Locação:</strong>
  <%= data_br(@client.location_init) %>
</p>

<p>
  <strong>Valor da Locação:</strong>
  <%= number_to_currency_br(@client.location_value) %>
</p>

<p>
  <strong>Número do Apartamento:</strong>
  <%= @client.apto_number %>
</p>

<p>
  <strong>Iptu:</strong>
  <%= number_to_currency_br(@client.iptu) %>
</p>


<%= link_to edit_client_path(@client), class:"btn btn-primary" do %>
  <i class="fas fa-edit"></i>Editar
<% end %> |

<%= link_to clients_path, class:"btn btn-warning" do%>
  <i class="fas fa-arrow-left"></i>Voltar
<% end %>


